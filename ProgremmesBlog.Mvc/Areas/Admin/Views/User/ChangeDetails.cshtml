@model Entities.Dtos.UserUpdateDto
@{
    Layout = "_Layout";
    ViewBag.Title = "编辑个人资料";
}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> 编辑个人资料</h4>
            </div>
            <div class="card-body">
                <form asp-controller="User" asp-action="ChangeDetails" enctype="multipart/form-data" method="post" id="form-user-update">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <input asp-for="Id" type="hidden"/>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="UserName"></label>
                            <input class="form-control" asp-for="UserName" placeholder="请输入用户名。"/>
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Email"></label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="请输入您的电子邮件地址。"/>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName"></label>
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="请输入姓名。"/>
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="LastName"></label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="请输入姓氏。"/>
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="PhoneNumber"></label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="请输入您的电话号码。"/>
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="WebsiteLink"></label>
                            <input type="text" class="form-control" asp-for="WebsiteLink" placeholder="请输入网站链接。"/>
                            <span class="text-danger" asp-validation-for="WebsiteLink"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="About"></label>
                            <textarea class="form-control" asp-for="About" placeholder="请输入关于信息。" rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="About"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="TwitterLink"></label>
                            <input type="text" class="form-control" asp-for="TwitterLink" placeholder="请输入您的Twitter个人资料链接。"/>
                            <span class="text-danger" asp-validation-for="TwitterLink"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="FacebookLink"></label>
                            <input type="text" class="form-control" asp-for="FacebookLink" placeholder="请输入您的Facebook个人资料链接。"/>
                            <span class="text-danger" asp-validation-for="FacebookLink"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="InstagramLink"></label>
                            <input type="text" class="form-control" asp-for="InstagramLink" placeholder="请输入您的Instagram个人资料链接。"/>
                            <span class="text-danger" asp-validation-for="InstagramLink"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="LinkedInLink"></label>
                            <input type="text" class="form-control" asp-for="LinkedInLink" placeholder="请输入您的LinkedIn个人资料链接。"/>
                            <span class="text-danger" asp-validation-for="LinkedInLink"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="YoutubeLink"></label>
                            <input type="text" class="form-control" asp-for="YoutubeLink" placeholder="请输入您的Youtube个人资料链接。"/>
                            <span class="text-danger" asp-validation-for="YoutubeLink"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="GitHubLink"></label>
                            <input type="text" class="form-control" asp-for="GitHubLink" placeholder="请输入您的Github个人资料链接。"/>
                            <span class="text-danger" asp-validation-for="GitHubLink"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="Picture"></label>
                            <input asp-for="Picture" type="hidden"/>
                            <img class="my-image" src="~/img/@Model.Picture" alt="@Model.UserName"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="PictureFile"></label>
                            <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" placeholder="请输入姓氏。"/>
                            <span class="text-danger" asp-validation-for="PictureFile"></span>
                        </div>
                        <div class="form-group col-md-12 text-center">
                            <button type="submit" class="btn btn-primary btn-lg"><span class="fas fa-save"></span> 保存</button>
                            <a class="btn btn-danger btn-lg" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span> 取消</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>