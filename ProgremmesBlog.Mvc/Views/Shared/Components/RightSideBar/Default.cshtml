@model ProgrammersBlog.Mvc.Models.RightSideBarViewModel
<div class="col-md-4">

    <!-- Search Widget -->
    <div class="card my-4">
        <h5 class="card-header">Arama</h5>
        <div class="card-body">
            <form asp-controller="Article" asp-action="Search" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" name="keyword" placeholder="您要搜索的关键字...">
                    <span class="input-group-append">
                        <button class="btn btn-secondary" type="submit">搜索!</button>
                    </span>
                </div>
            </form>
        </div>

    </div>

    <!-- Categories Widget -->
    <div class="card my-4">
        <h5 class="card-header">分类</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a asp-controller="Home" asp-action="Index">全部</a>
                        </li>
                        @foreach (var category in Model.Categories)
                        {
                            <li class="list-group-item">
                                <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id">@category.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Sidebar Widgets Column -->

        </div>
    </div>

    <!-- Side Widget -->
    <div class="card my-4">
        <h5 class="card-header">阅读最多的文章</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        @for (var i = 0; i < Model.Articles.Count; i++)
                        {
                            if (i % 2 == 0)
                            {
                                <li class="list-group-item list-group-item-primary">
                                    <a asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.Articles[i].Id">@Model.Articles[i].Title</a>
                                </li>
                            }
                            else
                            {
                                <li class="list-group-item list-group-item-info">
                                    <a asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.Articles[i].Id">@Model.Articles[i].Title</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>