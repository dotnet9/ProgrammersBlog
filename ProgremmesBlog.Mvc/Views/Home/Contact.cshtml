@model Entities.Dtos.EmailSendDto
@{
    Layout = "_ContactLayout";
    ViewBag.Title = "联系";
    ViewBag.Author = "ProgrammersBlog";
    ViewBag.Description = "联系我们 ProgrammersBlog";
    ViewBag.Tags = "Contact, Contact Us, 联系我们, 联系";
}
<link href="~/BlogHome/css/Contact-Page.css" rel="stylesheet"/>
<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact"/>
    </div>
    <form asp-controller="Home" asp-action="Contact" method="post">
        <h3>给我们留言</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" name="txtName" class="form-control" placeholder="您的名字" asp-for="Name"/>
                </div>
                <div class="form-group">
                    <input type="text" name="txtEmail" class="form-control" placeholder="电子邮件" asp-for="Email"/>
                </div>
                <div class="form-group">
                    <input type="text" name="txtSubject" class="form-control" placeholder="主题" asp-for="Subject"/>
                </div>
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btnContact" value="提交"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea name="txtMsg" class="form-control" placeholder="留言" style="height: 150px; width: 100%;" asp-for="Message"></textarea>
                </div>
            </div>
        </div>
    </form>
</div>